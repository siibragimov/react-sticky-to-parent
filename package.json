    "eslint-plugin-react-refresh": "^0.4.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.2.2",
    "vite": "^5.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/siibragimov/react-sticky-to-parent.git"
